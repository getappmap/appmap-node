{
  "ts-node": {
    "esm": true
  },
  "files": ["src/index.ts"],
  "compilerOptions": {
    "skipLibCheck": true,
    "strictNullChecks": true,
    "module": "ESNext" /* Specify what module code is generated. */,
    "rootDir": "src" /* Specify the root folder within your source files. */,
    "outDir": "dist",
    "types": ["node"],
    "sourceMap": true, /* Trailing comma needs to be parsed correctly */
  }
}
