{
  "extends": "@tsconfig/node18",
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true,
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "ts-node": {
    "swc": true
  },
  "include": ["src/**/*", "test/**/*", "types/**/*"],
  "exclude": ["src/coverage/**/*"]
}
